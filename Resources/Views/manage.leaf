#extend("base")

#export("body") {
    <div class="container">
        <div class="col-lg-6">
            <h3>Admin page</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <h5>Add new member:</h5>
            <form action="/members/create" method="post" enctype="multipart/form-data">
                <input type="text" class="u-full-width" name="name" placeholder="what is your full name"/><br>
                <input type="text" class="u-full-width" name="email" placeholder="we need your email as your user login"/><br>
                <input type="file" name="image"/><br>
                <input type="submit" value="save"/>
            </form>
        </div>
    </div>

    <table id="members" class="table table-hover table-responsive tablesorter">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email Address</th>
                <th>Â </th>
            </tr>
        </thead>
        <tbody>
        #loop(members, "member") {
            <tr>
                <form action="/members/delete/#(member.id)" method="post">
                <td>#(member.name)</td>
                <td><a href="mailto:#(member.name)<#(member.email)>?subject=I need some help with something">#(member.email)</a></td>
                <td data-order="#(member.id)">
                    <button type="submit" value="Submit">Delete</button>
                </td>
                </form>
            </tr>
        }
        </tbody>
    <table>
}
